(* This is the Grammar for the programming language fractal. *)

program
	: fnDecl* Eof
	;

fnDecl
	: 'fn' id param_list block

id
	: [a-zA-Z_][a-zA-Z0-9_]*
    ;

param_list
	: '(' ')' // TODO: Add parameters
	;

block
	: '{' stmt* '}'
	;

c_block
	: '$' '{' c_stmt* '}'
	;

stmt
	: expr ';'
	| 'return' expr ';'
	;

expr
	: term
	| term '+' expr
	| term '-' expr
	;

term
	: factor
	| factor '*' term
	| factor '/' term
	;

factor
	: id
	| num
	| '(' expr ')'
	;

num
	: int
	| float
	;

int
	: [0-9]+
	;

float
	: [0-9]+\.[0-9]+
	;
